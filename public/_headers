# Disable caching for dynamic JSON files
/resume.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/profile.json
  Cache-Control: no-cache, no-store, must-revalidate  
  Pragma: no-cache
  Expires: 0

# Cache static assets for 1 year
/logos/*
  Cache-Control: public, max-age=31536000, immutable

/icons/*
  Cache-Control: public, max-age=31536000, immutable

# Cache JS/CSS with versioning
*.js
  Cache-Control: public, max-age=31536000, immutable

*.css  
  Cache-Control: public, max-age=31536000, immutable